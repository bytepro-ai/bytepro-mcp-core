{
  "name": "@bytepro/mcp-core",
  "version": "0.1.0",
  "description": "Security-first library for building Model Context Protocol servers with database adapters and tool execution boundaries.",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./adapters": "./src/adapters/adapterRegistry.js",
    "./session": "./src/core/sessionContext.js",
    "./capabilities": "./src/security/capabilities.js",
    "./package.json": "./package.json"
  },
  "files": [
    "src/**/*.js",
    "examples/**/*.js",
    "examples/**/*.md",
    "README.md",
    "LICENSE",
    "SECURITY.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "dev": "nodemon src/core/server.js",
    "start": "node src/core/server.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:security": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config ./jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytepro-ai/bytepro-mcp-core.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "database",
    "database-adapter",
    "postgresql",
    "mysql",
    "mssql",
    "sql-server",
    "security",
    "sql-injection-prevention",
    "query-guard",
    "ai",
    "llm",
    "authorization",
    "audit-logging"
  ],
  "author": "BytePro AI",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bytepro-ai/bytepro-mcp-core/issues"
  },
  "homepage": "https://github.com/bytepro-ai/bytepro-mcp-core#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.4.5",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "mysql2": "^3.0.0",
    "mssql": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "mysql2": {
      "optional": true
    },
    "mssql": {
      "optional": true
    }
  },
  "devDependencies": {
    "eslint": "^9.16.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "jest": "^30.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
